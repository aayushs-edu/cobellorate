<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/dash.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <!--Font Awesome-->
    <link rel="stylesheet" 
href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <title>Dashboard</title>
</head>
<body>
    <div class="sidebar">
        <nav>
            <ul>
                <li>
                    <a href="#">
                        <i class="fas fa-sign-in-alt"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fas fa-laptop-code"></i>
                        <p>Projects</p>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa-solid fa-user-group"></i>
                        <p>Friends</p>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="fas fa-user"></i>
                    <p>Account</p>
                </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fas fa-gear"></i>
                        <p>Settings</p>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img src="/img/canvas-logo.png" style="width: 30px; height: 30px; margin: -3px;">
                        <p style="color:rgb(255, 101, 101)">Canvas</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="dashboard">
        <h1 style="padding-top: 10px">Welcome, <p style="color: rgb(116,60,124); display:inline"><%= session.user %></p></h1>
        <h3>Dashboard</h3>
        <br>
        <div class="panel">
            <div class="panel-content">
                <div class="panel-title">Projects</div>
                <div class="file-list">
                    <% 
                        result.forEach(function(row) {
                    %>
                            <div class="file">
                                <i class="fas fa-file-word"></i>
                                <a href='../projects/<%= row.projectID %>'><%= row.name %></a>
                            </div>
                    <%
                        })
                    %>
                    <form action='new_project' method='get'>
                        <input type='submit' value="New Project">
                    </form>
                </div>
            </div>
        </div>
        <div class="feed">
            <div class="feed-content">
                <div class="panel-title">Feed</div>
                <div class="widget">Change 1</div>
                <div class="widget">Change 2</div>
            </div>
        </div>
        <div class="panel">
            <div class="panel-content">
                <div class="panel-title">Friends</div>
                <br>
                <div class="user-list">
                    <span class="user">
                        <i class="fas fa-circle-user"></i>
                        <p>User1</p>
                    </span>
                    <span class="user">
                        <i class="fas fa-circle-user"></i>
                        <p>User2</p>
                    </span>
                    <span class="user">
                        <i class="fas fa-circle-user"></i>
                        <p>User2</p>
                    </span>
                    <span class="user">
                        <i class="fas fa-circle-user"></i>
                        <p>User2</p>
                    </span>
                    <span class="user">
                        <i class="fas fa-circle-user"></i>
                        <p>User2</p>
                    </span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

