<body class="text-center" style="background-color: #212529">
    <form style="border: 5px solid; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); padding: 10px;" method="POST">
        <h1 class="h3 mb-3 fw-normal" style="color: white; font-size: 40px"><b>New Project</b></h1>
        <div class="form-floating">
            <input class="input" placeholder="Project Name" type="text" name="name" required></input>
            <span class="underline"></span>
        </div>
            <div class="checkbox mb-3">
            </div>
            <div class="form-floating">
                <input class="input" placeholder="Description" type="textarea" name="desc" required></input>
                <span class="underline"></span>
            </div>
        <div class="checkbox mb-3">
          </div>
          <br>
        <input type="submit" value="Create Project">
      </form>
      <form style="position: absolute; bottom: 35%; left: 50%; transform: translate(-50%, 150%); padding: 10px;" method="get" action="./dashboard">
        <input class="cancel" type="submit" value="Cancel">
      </form>
</body>
